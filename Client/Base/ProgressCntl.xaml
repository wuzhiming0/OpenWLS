<UserControl x:Class="OpenWLS.Client.Base.ProgressCntl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenWLS.Client.Base"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ProgressBar x:Name="pb"  Height="23" VerticalAlignment="Top" />
        <TextBlock Text="{Binding ElementName=pb, Path=Value }" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Button Content="OK" Width="60" Height="23" VerticalAlignment="Top" 
              x:Name="okBtn"  Click="OkButton_Click" Margin="0,27,0,0" />
    </Grid>
</UserControl>
