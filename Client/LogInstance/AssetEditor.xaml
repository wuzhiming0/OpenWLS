<UserControl x:Class="OpenWLS.Client.LogInstance.AssetEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenWLS.Client.LogInstance"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Label Content="Asset:" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,1,0,0"/>
        <TextBox x:Name="assetTb" Width="100" Margin="41,4,0,3" Height="23" HorizontalAlignment="Left"/>
        <Button x:Name="saveBtn" Content="Save" Width="60" Margin="151,4,0,3" Height="23" HorizontalAlignment="Left"
                Click="saveBtn_Click" />
    </Grid>
</UserControl>
